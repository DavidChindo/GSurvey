<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cards_gral"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="@dimen/margin_eigth">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/item_survey_list_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_survey_list_check_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text=" * "
        android:textSize="@dimen/font_size_18"
        android:visibility="gone"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/item_survey_list_chk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta SelecciÃ³n multiple"
        android:textSize="@dimen/font_size_18"
        android:layout_marginBottom="@dimen/margin_eigth"
        android:textColor="@color/font_gray"/>

    <LinearLayout
        android:id="@+id/item_survey_list_check_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <LinearLayout
        android:id="@+id/item_survey_check_linear_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>
</android.support.v7.widget.CardView>