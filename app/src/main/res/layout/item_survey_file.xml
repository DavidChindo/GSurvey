<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_survey_file_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:visibility="gone"
            tools:text=" *" />

        <TextView
            android:id="@+id/item_survey_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_survey_file_required"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/font_gray"
            tools:text="Image name" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/item_survey_file_capture"
        android:layout_width="@dimen/margin_sixtyfour"
        android:layout_height="@dimen/margin_fiftytwo"
        android:layout_margin="4dp"
        android:padding="@dimen/margin_twelve"
        android:background="@drawable/shape_rectangle"
        android:src="@drawable/ic_folder"
        android:tint="@color/blue_icon"
        android:textColor="@color/colorWhite"
        tools:ignore="ButtonStyle"
        android:layout_gravity="end"/>

</LinearLayout>