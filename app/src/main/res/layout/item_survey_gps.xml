<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/item_survey_map_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/gray_font_form"
        android:layout_marginLeft="4dp"
        tools:text="Map name"
        tools:ignore="RtlHardcoded"
        android:layout_marginBottom="@dimen/margin_four"/>

    <ImageView
        android:id="@+id/item_survey_map_capture"
        android:layout_width="@dimen/margin_sixtyfour"
        android:layout_height="@dimen/margin_fiftytwo"
        android:layout_margin="4dp"
        android:padding="@dimen/margin_eigth"
        android:background="@drawable/shape_rectangle"
        android:src="@drawable/ic_ubication"
        android:tint="@color/blue_icon"
        android:textColor="@color/colorWhite"
        tools:ignore="ButtonStyle"
        android:layout_gravity="end"/>


</LinearLayout>