<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hics.g500.SurveyEngine.Views.SurveyActivity">
<android.support.v7.widget.RecyclerView
    android:id="@+id/act_survey_recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:clipToPadding="false"
    android:layout_marginBottom="@dimen/margin_thirtyfour"/>
<LinearLayout
    android:id="@+id/act_survey_toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom|end"
    android:background="@color/blue_background">

    <Button
        android:id="@+id/act_survey_finish"
        android:background="@drawable/shape_status_indemand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_thirtytwo"
        android:layout_marginBottom="@dimen/margin_four"
        android:layout_marginStart="@dimen/margin_thirtytwo"
        android:layout_marginEnd="@dimen/margin_thirtytwo"
        android:textColor="@color/white_background"
