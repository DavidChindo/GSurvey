<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarAppearanceTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarAppearanceSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray_font_form</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="BlueButton" >
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="StrokeButton" >
        <item name="android:background">@drawable/shape_stroke_white</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="font_title">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_title_gray</item>
        <item name="android:padding">@dimen/margin_four</item>
    </style>

    <style name="font_title_detail">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/margin_four</item>
    </style>

    <style name="font_title_reverse">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/margin_four</item>
    </style>

    <style name="font_body">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
    </style>

    <style name="font_body_light">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/font_title_gray</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
    </style>

    <style name="font_body_light_bold">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_body_company">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
    </style>

    <style name="font_body_italic">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
    </style>

</resources>
